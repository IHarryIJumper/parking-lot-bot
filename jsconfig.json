{
  "compilerOptions": {
    "baseUrl": "./src/",
    "paths": {
      "api/*": ["./api/*"],
      "sqls/*": ["./sqls/*"],
      "database/*": ["./database/*"],
      "config": ["./config/index.js"],
      "helpers/*": ["./helpers/*"]
    },
    "target": "es6",
    "module": "commonjs",
    "checkJs": false,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules"
  ],
  "typeAcquisition": {
    "include": [
      "lodash"
    ]
  }
}